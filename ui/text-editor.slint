import { TextEdit, Button } from "std-widgets.slint";
import {Page, BackendTextEditor} from "common.slint";

export component TextEditor inherits Page {
    in-out property <string> notes-text: BackendTextEditor.read-file("notes.txt");

    VerticalLayout {
        TextEdit {
            font-size: 14px;
            height: 80%;
            width: 50%;
            text: notes-text;
            edited(text) => {
                notes-text = text;
            }
        }

        // Buttons for saving and loading files
        VerticalLayout {
            Button {
                text: "Save";
                clicked => {
                    BackendTextEditor.save-file("notes.txt", notes-text);
                }
            }
            Button {
                text: "Load File";
                clicked => {
                    notes-text = BackendTextEditor.read-file("notes.txt");
                }
            }
        }

        TouchArea {
            moved => {
                self.width = self.mouse-x;
            }
        }
    }
}